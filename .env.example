# App Pasos Environment Configuration
# Copy this file to .env and update values for your environment
# IMPORTANT: Never commit .env file to version control!

# =============================================================================
# API Configuration
# =============================================================================

# Base URL for the backend API server
# Development: http://localhost:3000/api
# Staging: https://staging-api.apppasos.com/api
# Production: https://api.apppasos.com/api
API_BASE_URL=http://localhost:3000/api

# =============================================================================
# Environment Settings
# =============================================================================

# Current environment: development, staging, or production
# This affects logging, error reporting, and feature flags
ENV=development

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable analytics tracking
# Set to true in production, false in development
ENABLE_ANALYTICS=false

# Enable/disable crash reporting
# Set to true in production, false in development
ENABLE_CRASH_REPORTING=false

# Enable/disable verbose logging
# Set to true for debugging, false in production
ENABLE_VERBOSE_LOGGING=true

# =============================================================================
# Authentication (Optional)
# =============================================================================

# OAuth client ID (if using OAuth)
# OAUTH_CLIENT_ID=your_oauth_client_id

# =============================================================================
# Third-Party Services (Optional)
# =============================================================================

# Sentry DSN for error tracking (production only)
# SENTRY_DSN=https://your-sentry-dsn

# Firebase Project ID (if using Firebase)
# FIREBASE_PROJECT_ID=your_firebase_project_id
